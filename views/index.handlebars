<div class="note-section row">
    <div class="col-lg-6">
        <h4>Hello, {{user}}</h4>
        <p>Add a note</p>
        <form id="add" class="row">
            <div class="col col-sm-9">
                <textarea type="text" name="note"></textarea>
            </div>
            <div class="col col-sm-3">
                <input type="submit" value="Take Notes">
            </div>
        </form>
    </div>

    <div class="col-lg-6">
        <h4>My Notes</h4>
        <div id="notes">
            {{#each notes}}
            <div class="note">
                <span class="input"><textarea data-id="{{ @index }}">{{ this }}</textarea></span>

                <button class="remove btn btn-xs" data-id="{{ @index }}">Delete</button>
            </div>
            {{/each}}
        </div>
    </div>
</div>